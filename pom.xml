            <unsubscribe>mailto:sympa@truelicense.java.net?subject=unsubscribe%20announce</unsubscribe>
            <archive>http://java.net/projects/truelicense/lists/announce/archive</archive>
        </mailingList>
        <mailingList>
            <name>Users Mailing List</name>
